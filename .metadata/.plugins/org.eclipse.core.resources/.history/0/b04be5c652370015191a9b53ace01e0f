package myPackage;

public class MaxCounters {

	int increase(int[] counters, int X, int maxValue)
	{
		int index = X-1;
		if(index >= 0 && index < counters.length)
		{
			counters[index]++;
			if(maxValue < counters[index]) maxValue = counters[index];
		}
		return maxValue;
	}
	
